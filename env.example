# Cloud Cost Optimizer - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://cloud_cost_user:1101@localhost/cloud_cost_optimizer

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session Secret (generate a strong random string)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-here

# Encryption Key for sensitive data (32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption-key

# JWT Secret (if using JWT authentication)
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# CLOUD PROVIDER API KEYS (Optional - can be added via UI)
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GCP_REGION=us-central1

# Oracle Cloud Infrastructure Configuration
OCI_USER_OCID=ocid1.user.oc1..aaaaaaa...
OCI_TENANCY_OCID=ocid1.tenancy.oc1..aaaaaaa...
OCI_FINGERPRINT=aa:bb:cc:dd:ee:ff:gg:hh:ii:jj:kk:ll:mm:nn:oo:pp
OCI_PRIVATE_KEY_PATH=path/to/oci-private-key.pem
OCI_REGION=us-phoenix-1

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus metrics endpoint (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# CORS credentials
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Cache TTL settings (in seconds)
CACHE_TTL_DEFAULT=3600      # 1 hour
CACHE_TTL_INVENTORY=1800    # 30 minutes
CACHE_TTL_COST_ANALYSIS=7200 # 2 hours

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Cloud Cost Optimizer <noreply@yourdomain.com>

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760  # 10MB

# Allowed file types
ALLOWED_FILE_TYPES=.json,.csv,.xlsx

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable hot reload in development
HOT_RELOAD=true

# Enable debug mode
DEBUG=false

# Enable API documentation
API_DOCS_ENABLED=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL/TLS Configuration
SSL_CERT_PATH=path/to/cert.pem
SSL_KEY_PATH=path/to/key.pem

# Trust proxy (for load balancers)
TRUST_PROXY=true

# Compression
COMPRESSION_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_OCI_INTEGRATION=true
FEATURE_AWS_INTEGRATION=true
FEATURE_AZURE_INTEGRATION=true
FEATURE_GCP_INTEGRATION=true
FEATURE_COST_ANALYSIS=true
FEATURE_REPORTING=true
FEATURE_ALERTS=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Webhook URLs for notifications
WEBHOOK_URL_COST_ALERT=https://hooks.slack.com/services/...
WEBHOOK_URL_SCAN_COMPLETE=https://hooks.slack.com/services/...

# Notification settings
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
